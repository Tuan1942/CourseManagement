<Page x:Class="LearningCourse.Pages.Instructor.CourseAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LearningCourse.Pages.Instructor"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CourseAdd">

    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Tên khóa học:" Margin="0,0,0,10"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,20"/>

            <TextBlock Text="Mô tả:" Margin="0,0,0,10"/>
            <TextBox x:Name="DescriptionTextBox" Margin="0,0,0,20"/>

            <Button Content="Thêm khóa học" Click="AddCourseButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
